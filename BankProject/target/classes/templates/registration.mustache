<body>
<h5> Add new User: </h5>

<form action="/registration" method="post">

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">User Name :</label>
        <div class="col-sm-6">
            <input type="text" name="username" class="form-control" placeholder="User name" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">User Surname :</label>
        <div class="col-sm-6">
            <input type="text" name="surname" class="form-control" placeholder="User Surname" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">User address :</label>
        <div class="col-sm-6">
            <input type="text" name="address" class="form-control" placeholder="User address" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">User pasport :</label>
        <div class="col-sm-6">
            <input type="text" name="pasport" class="form-control" placeholder="User pasport" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Password :</label>
        <div class="col-sm-6">
            <input type="text" name="password" class="form-control" placeholder="Password" />

        </div>
    </div>

    <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
    <div> <button class="btn btn-primary" type="submit">Sign Up</button></div>
</form>
